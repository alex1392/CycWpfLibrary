<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
  <Window.DataContext>
    <local:MainWindowViewModel />
  </Window.DataContext>
  <Window.CommandBindings>
    <CommandBinding Command="{x:Static local:MainWindowViewModel.Requery}"
                    Executed="Requery_Executed"/>
  </Window.CommandBindings>
  <Grid>
    <StackPanel>
      <Label Content="{Binding Label}" />
      <Button Content="Command Button"
              Command="{Binding ChangeLabelCommand}"/>
      <Button Content="RoutedCommand Button"
              Command="{x:Static local:MainWindowViewModel.Requery}" />
    </StackPanel>

  </Grid>
</Window>
