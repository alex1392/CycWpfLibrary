<mvvm:ObservableUserControl x:Class="CycWpfLibrary.UserControls.Axis"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:cyc="clr-namespace:CycWpfLibrary;assembly=CycWpfLibrary"
                            xmlns:local="clr-namespace:CycWpfLibrary.UserControls"
                            xmlns:mvvm="clr-namespace:CycWpfLibrary.MVVM;assembly=CycWpfLibrary"
                            xmlns:resource="clr-namespace:CycWpfLibrary.Resources;assembly=CycWpfLibrary.Resources"
                            mc:Ignorable="d"
                            d:DataContext="{d:DesignInstance local:Axis, IsDesignTimeCreatable=True}"
                            d:DesignHeight="450"
                            d:DesignWidth="800">
  <Viewbox>
    <Grid Name="gridMain"
          Background="Transparent">
      <Image Name="imageControl"
             Source="{Binding ImageSource}"
             Stretch="None" 
             Panel.ZIndex="0"/>
      <Border Name="shadow"
              Background="{x:Static resource:ResourceManager.ShadowBrush}"
              Width="{Binding ElementName=gridMain, Path=ActualWidth}"
              Height="{Binding ElementName=gridMain, Path=ActualHeight}"
              Panel.ZIndex="1" />
      <Rectangle Name="axisImage"
                 Width="{Binding ElementName=gridMain, Path=ActualWidth}"
                 Height="{Binding ElementName=gridMain, Path=ActualHeight}"
                 Panel.ZIndex="2">
        <Rectangle.Fill>
          <VisualBrush Visual="{Binding ElementName=imageControl}"
                       Viewbox="{Binding AxisRelative}"
                       Viewport="{Binding AxisRelative}">
          </VisualBrush>
        </Rectangle.Fill>
      </Rectangle>
      <Rectangle Name="axisBorder"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Stroke="Red"
                 Fill="Transparent"
                 StrokeThickness="3"
                 Width="{Binding AxisWidth}"
                 Height="{Binding AxisHeight}"
                 Margin="{Binding AxisMargin}"
                 Panel.ZIndex="3"/>

    </Grid>

  </Viewbox>
</mvvm:ObservableUserControl>
